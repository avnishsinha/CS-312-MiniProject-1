<%- include('partials/header') %>

<h1 class="mb-4">Edit Post</h1>

<form action="/edit/<%= post.id %>" method="POST">

    <!-- Author Field -->
    <div class="mb-3">
        <label for="author">Author Name:</label>
        <input 
            type="text" 
            name="author" 
            id="author"
            class="form-control" 
            value="<%= post.author %>" 
            required
        >
    </div>

    <!-- Title Field -->
    <div class="mb-3">
        <label for="title">Title:</label>
        <input 
            type="text" 
            name="title" 
            id="title"
            class="form-control" 
            value="<%= post.title %>" 
            required
        >
    </div>

    <!-- Content Field -->
    <div class="mb-3">
        <label for="content">Content:</label>
        <textarea 
            name="content" 
            id="content"
            class="form-control" 
            rows="5" 
            required
        ><%= post.content %></textarea>
    </div>

    <!-- Category Field -->
    <div class="mb-3">
        <label for="category">Category:</label>
        <select 
            name="category" 
            id="category"
            class="form-select" 
            required
        >
            <% categories.forEach(cat => { %>
                <option 
                    value="<%= cat %>" 
                    <%= post.category === cat ? 'selected' : '' %>
                >
                    <%= cat %>
                </option>
            <% }); %>
        </select>
    </div>

    <!-- Submit Button -->
    <button class="btn btn-primary" type="submit">Save Changes</button>

</form>

<%- include('partials/footer') %>
